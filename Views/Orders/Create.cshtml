@model PIS.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>@PIS.Properties.Resource.Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="strOrderNumber" class="control-label"></label>
                <input asp-for="strOrderNumber" class="form-control" />
                <span asp-validation-for="strOrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="eStatus" class="control-label"></label>
                <select asp-for="eStatus" asp-items="Html.GetEnumSelectList<Order.EOrderStatus>()" class="form-control"></select>
                <span asp-validation-for="eStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ePayment" class="control-label"></label>
                <select asp-for="ePayment" asp-items="Html.GetEnumSelectList<Order.EPaymentType>()" class="form-control"></select>
                <span asp-validation-for="ePayment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="strRemarks" class="control-label"></label>
                <input asp-for="strRemarks" class="form-control" />
                <span asp-validation-for="strRemarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@PIS.Properties.Resource.Ok" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
